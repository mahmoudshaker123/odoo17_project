<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Rejection Wizard Form View -->
        <record id="view_sale_order_rejection_wizard_form" model="ir.ui.view">
            <field name="name">sale.order.rejection.wizard.form</field>
            <field name="model">sale.order.rejection.wizard</field>
            <field name="arch" type="xml">
                <form string="Reject Quotation">
                    <group>
                        <field name="sale_order_id" readonly="1"/>
                        <field name="rejected_by" readonly="1"/>
                        <field name="rejected_to" readonly="1"/>
                        <field name="state_from" readonly="1"/>
                        <field name="state_to" readonly="1"/>
                    </group>
                    <group>
                        <field name="reason" placeholder="Please provide a detailed reason for rejecting this quotation..."/>
                    </group>
                    <footer>
                        <button name="action_reject" string="Reject Quotation" type="object" class="btn-warning"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Rejection Wizard Action -->
        <record id="action_sale_order_rejection_wizard" model="ir.actions.act_window">
            <field name="name">Reject Quotation</field>
            <field name="res_model">sale.order.rejection.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_sale_order_rejection_wizard_form"/>
        </record>

    </data>
</odoo>
