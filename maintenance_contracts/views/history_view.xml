<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_category_tree" model="ir.ui.view">
        <field name="name">category.tree</field>
        <field name="model">category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for Categories -->
    <record id="view_category_form" model="ir.ui.view">
        <field name="name">category.form</field>
        <field name="model">category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Categories -->
    <record id="category_action" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">category</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>

    

</odoo>