<record id="view_attendance_report_wizard_form" model="ir.ui.view">
  <field name="name">attendance.report.wizard.form</field>
  <field name="model">attendance.report.wizard</field>
  <field name="arch" type="xml">
    <form string="تقرير الحضور">
      <group>
        <field name="employee_id"/>
        <field name="start_date"/>
        <field name="end_date"/>
      </group>
      <footer>
        <button name="action_generate_report" string="توليد التقرير"
                type="object" class="btn-primary"/>
        <button string="إلغاء" special="cancel"/>
      </footer>
    </form>
  </field>
</record>
