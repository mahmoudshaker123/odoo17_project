<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Form View for the Wizard -->
    <record id="view_task_report_wizard_form" model="ir.ui.view">
        <field name="name">task.report.wizard.form</field>
        <field name="model">task.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Task Excel Report">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                    <field name="employee_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_generate_excel" type="object" string="Download Excel" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to Open the Wizard -->
    <record id="action_task_report_wizard" model="ir.actions.act_window">
        <field name="name">Task Excel Report</field>
        <field name="res_model">task.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_task_report_wizard_form"/>
        <field name="target">new</field>
    </record>

    <!-- Menu Item to Launch the Wizard -->
    <menuitem
        id="menu_task_excel_report"
        name="Excel Report"
        action="action_task_report_wizard"
        parent="hr.menu_hr_reporting_timesheet"
        sequence="100"/>

</odoo>
