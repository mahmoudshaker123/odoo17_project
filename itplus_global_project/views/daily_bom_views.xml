<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_daily_bom_tree" model="ir.ui.view">
            <field name="name">daily.bom.tree</field>
            <field name="model">daily.bom</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="product_id"/>
                    <field name="state" widget="badge"
                           decoration-success="state == 'confirmed'"
                           decoration-danger="state == 'draft'"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_daily_bom_form" model="ir.ui.view">
            <field name="name">daily.bom.form</field>
            <field name="model">daily.bom</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm"
                                string="Confirm"
                                type="object"
                                class="btn-primary"
                                invisible="state != 'draft'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="product_id"/>
                            <field name="product_count"/>
                            <field name="sale_order_id"/>
                        </group>
                        <notebook>
                            <page string="Raw Materials">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_daily_bom" model="ir.actions.act_window">
            <field name="name">Daily BOMs</field>
            <field name="res_model">daily.bom</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_daily_bom"
                  name="Daily BOMs"
                  parent="mrp.menu_mrp_root"
                  action="action_daily_bom"
                  sequence="110"/>
    </data>
</odoo>
