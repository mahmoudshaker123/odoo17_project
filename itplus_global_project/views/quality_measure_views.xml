<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_quality_measure_tree" model="ir.ui.view">
        <field name="name">quality.measure.tree</field>
        <field name="model">quality.measure</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="type"/>
                <field name="quantity_min" invisible="type != 'quantity'"/>
                <field name="quantity_max" invisible="type != 'quantity'"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_quality_measure_form" model="ir.ui.view">
        <field name="name">quality.measure.form</field>
        <field name="model">quality.measure</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="product_id" required="1"/>
                        <field name="location_id" required="1"/>
                        <field name="type" required="1"/>
                        <field name="quantity_min" invisible="type != 'quantity'"/>
                        <field name="quantity_max" invisible="type != 'quantity'"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_quality_measure" model="ir.actions.act_window">
        <field name="name">Quality Measures</field>
        <field name="res_model">quality.measure</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
