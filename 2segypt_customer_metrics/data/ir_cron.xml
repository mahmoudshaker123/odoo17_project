<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron Job to automatically create Customer Metrics records -->
        <record id="ir_cron_create_customer_metrics" model="ir.cron">
            <field name="name">Create Customer Metrics Records</field>
            <field name="model_id" ref="model_res_partner_customer_metrics"/>
            <field name="state">code</field>
            <field name="code">model.create_metrics_for_customers()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">5</field>
        </record>

    </data>
</odoo>
