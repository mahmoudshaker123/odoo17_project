<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_customer_metrics_tree" model="ir.ui.view">
        <field name="name">customer.metrics.tree</field>
        <field name="model">res.partner.customer_metrics</field>
        <field name="arch" type="xml">
            <tree string="Customer Metrics">
                <field name="customer_id"/>
                <field name="total_sales" sum="Total Sales"/>
                <field name="order_count" sum="Order Count"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_customer_metrics_form" model="ir.ui.view">
        <field name="name">customer.metrics.form</field>
        <field name="model">res.partner.customer_metrics</field>
        <field name="arch" type="xml">
            <form string="Customer Metrics">
                <sheet>
                    <group>
                        <field name="customer_id"/>
                        <field name="total_sales"/>
                        <field name="order_count"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_customer_metrics_kanban" model="ir.ui.view">
        <field name="name">customer.metrics.kanban</field>
        <field name="model">res.partner.customer_metrics</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="customer_id"/>
                <field name="total_sales"/>
                <field name="order_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_card">
                            <div class="o_kanban_details">
                                <strong><field name="customer_id"/></strong>
                                <div>Total Sales: <field name="total_sales"/></div>
                                <div>Order Count: <field name="order_count"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_customer_metrics_search" model="ir.ui.view">
        <field name="name">customer.metrics.search</field>
        <field name="model">res.partner.customer_metrics</field>
        <field name="arch" type="xml">
            <search string="Search Customer Metrics">
                <field name="customer_id"/>
                <field name="total_sales"/>
                <field name="order_count"/>
            </search>
        </field>
    </record>
</odoo>
